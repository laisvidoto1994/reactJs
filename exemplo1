

class Button  extends React.Component {

	state = { counter: 0 };
	
    /* exemplo1-> state(utiliza o estado) */
	
  /*
  handleClick = () => {
  	this.setState({
    	counter: this.state.counter + 1
    });
  }; 
  */
  
  /* exemplo2-> prevState(Ã© utilizado apenas, se precisarmos saber o valor atual do estado) */
  
  handleClick = () => {
  	this.setState((prevState) => ({
    	counter: prevState.counter + 1
    }));
  };
  
  render() {
  	return (
    	<button onClick={this.handleClick}>
    	  {this.state.counter}
    	</button>
    );
  }  
}

ReactDOM.render(<Button />, mountNode);
